;Program: Timer 2, Auto reload mode – LED blink 2s
LED EQU P1.0
RCAP2L EQU 0CAH
RCAP2H EQU 0CBH
TL2 EQU 0CCH
TH2 EQU 0CDH
TR2 EQU 0CAH
TF2 EQU 0CFH
ORG 00H
	MOV RCAP2L,#18H
	MOV RCAP2H,#02H
	SETB TR2	;start the timer 2
MAIN:
	CPL LED	;LED=OFF
	MOV R7,#28
TIMES_28:	;2 S Delay
	JNB TF2,TIMES_28
	CLR TF2	;clear timer 2 flag
	DJNZ R7,TIMES_28
	SJMP MAIN
END