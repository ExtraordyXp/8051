;Program: Generate sine wave using DAC0808/MC1408
DAC EQU P1
ORG 00H
AGAIN:	MOV DPTR,#SINE
	MOV R2,#72
BACK:	CLR A
	MOVC A,@A+DPTR	;next sample
	MOV DAC,A
	INC DPTR
	DJNZ R2,BACK
	SJMP AGAIN
	
ORG 300H
SINE:	DB 128,139,150,161,171,181,191,201,209,218,225,232,238,243,247,251,253,255
		DB 255,255,253,251,247,243,238,232,225,218,209,201,191,181,171,160,149,138
		DB 127,116,105,94,84,73,64,54,45,37,30,23,17,12,8,4,2,0
		DB 0,1,2,4,8,12,17,23,30,38,46,55,64,74,84,95,106,117,128
END